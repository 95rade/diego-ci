#!/bin/bash

set -e -x -u

$(dirname $0)/bosh_setup

bosh download manifest ${DEPLOYMENT_NAME} /tmp/${DEPLOYMENT_NAME}.yml

bosh deployment /tmp/${DEPLOYMENT_NAME}.yml

set +e
bosh run errand routing_acceptance_tests --download-logs --keep-alive
errand_result=$?
set -e

original_name=$(ls rats.0.*.tgz)
new_name=$(echo $original_name | sed 's/\.0\./\.0.0.0./')
mv $original_name rats-results/$new_name
exit $errand_result

