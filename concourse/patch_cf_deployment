#!/usr/bin/env bash

set -ex

export BOSH_MANIFEST="${PWD}/patched-cf-deployment/cf-deployment.yml"
export OPSFILE_DIR="${PWD}/cf-deployment/opsfiles"

cp -R ${OPSFILE_DIR} ${PWD}/patched-cf-deployment
pushd ${PWD}/cf-deployment
  git apply ${PWD}/diego-release/cf-deployment-patch-files/*
  cp cf-deployment.yml ${BOSH_MANIFEST}
popd
