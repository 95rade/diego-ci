#!/bin/bash

set -e -x

source ~/.bashrc

setup_env() {
  export WORKSPACE_DIR="$(pwd)"

  bosh target $(provision-bosh-lite/bosh_lite_ip)
  bosh login -u admin -p admin
}

upload_releases() {
  bosh upload release $CF_RELEASE
  bosh upload release $DIEGO_RELEASE
  bosh upload release $GARDEN_LINUX_RELEASE
}

main() {
  setup_env
  upload_releases
}

main
