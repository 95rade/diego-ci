#!/usr/bin/env bash

set -ex

export BOSH_ENVIRONMENT
export BOSH_CLIENT
export BOSH_CLIENT_SECRET
export BOSH_DEPLOYMENT

export BOSH_MANIFEST="${PWD}/merged-cf-deployment/cf-deployment.yml"
export OPSFILE_DIR="${PWD}/merged-cf-deployment/operations"

export DEPLOYMENT_DIR="${PWD}/deployments-diego/${DEPLOYMENT_DIR}"
export BOSH_CA_CERT="${DEPLOYMENT_DIR}/deployments/bbl/ca-cert"

deployments_var_file="${DEPLOYMENT_DIR}/cf-deployment-vars.yml"

expand_ops_files () {
  OPS_FILES="-o ${OPSFILE_DIR}/gcp.yml"
  OPS_FILES="${OPS_FILES} -o ${OPSFILE_DIR}/windows-cell.yml"
  OPS_FILES="${OPS_FILES} -o ${OPSFILE_DIR}/use-only-local-route-emitters-windows-cell.yml"

  if [ "${DEPLOY_WINDOWS_CELL}" == "true" ]; then
    OPS_FILES="-o ${OPSFILE_DIR}/windows-cell.yml"
  fi

  if [ "${USE_LOCAL_ROUTE_EMITTERS}" == "true" ]; then
    OPS_FILES="-o ${OPSFILE_DIR}/use-only-local-route-emitters.yml"

    if [ "${DEPLOY_WINDOWS_CELL}" == "true" ]; then
      OPS_FILES="-o ${OPSFILE_DIR}/use-only-local-route-emitters-windows-cell.yml"
    fi
  fi

  if [ "${USE_LOCKET}" == "true" ]; then
    OPS_FILES="-o ${OPSFILE_DIR}/experimental/locket.yml"
  fi

  if [ "${DEPLOY_ROUTING}" == "true" ]; then
    OPS_FILES="-o ${OPSFILE_DIR}/tcp-routing-gcp.yml"

    if [ "${USE_LOCAL_ROUTE_EMITTERS}" == "true" ]; then
      OPS_FILES="-o ${OPSFILE_DIR}/experimental/experimental/enable-local-route-emitter-tcp.yml"

      if [ "${DEPLOY_WINDOWS_CELL}" == "true" ]; then
        OPS_FILES="-o ${OPSFILE_DIR}/experimental/enable-local-route-emitter-tcp-windows.yml"
      fi
    fi
  fi

  if [ "${USE_LOGGREGATOR_V@}" == "true" ]; then
    OPS_FILES="-o ${OPSFILE_DIR}/experimental/enable-loggregator-v2-diego-cell.yml"

    if [ "${DEPLOY_WINDOWS_CELL}" == "true" ]; then
      OPS_FILES="-o ${OPSFILE_DIR}/experimental/enable-loggregator-v2-windows-cell.yml"
    fi
  fi

  if [ "${USE_POSTGRES}" == "true" ]; then
    OPS_FILES="-o ${OPSFILE_DIR}/use-postgres.yml"

    if [ "${USE_LOCKET}" == "true" ]; then
      OPS_FILES="-o ${OPSFILE_DIR}/experimental/locket-postgres.yml"
    fi
  fi

  if [ -d "${DEPLOYMENT_DIR}/operations" ]
  then
    pushd ${DEPLOYMENT_DIR}/operations
      for opsfile in *.yml;
      do
        OPS_FILES="${OPS_FILES} -o ${PWD}/${opsfile}"
      done
    popd
  fi > /dev/null 2>&1

  if [ -d "${PWD}/diego-release/operations" ]
  then
    pushd ${PWD}/diego-release/operations
      for opsfile in *.yml;
      do
        OPS_FILES="${OPS_FILES} -o ${PWD}/${opsfile}"
      done
    popd
  fi > /dev/null 2>&1

  echo "${OPS_FILES}"
}

bosh log-in

bosh -n upload-stemcell bosh-stemcell/*.tgz
bosh -n upload-stemcell bosh-windows-stemcell/*.tgz

bosh -n interpolate \
  --var-errs \
  --vars-file=${deployments_var_file} ${BOSH_MANIFEST} \
  $(expand_ops_files) \
  -o <(cat <<EOF
- type: replace
  path: /releases/name=diego
  value:
    name: diego
    version: create
    url: file://$(pwd)/diego-release
EOF
)


bosh -n deploy \
     --vars-file=${deployments_var_file} \
     ${BOSH_MANIFEST} \
     $(expand_ops_files) \
     -o <(cat <<EOF
- type: replace
  path: /releases/name=diego
  value:
    name: diego
    version: create
    url: file://$(pwd)/diego-release
EOF
)
